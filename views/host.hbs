<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Page</title>

    <!-- JQUERY -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- my script -->
    <script src="/scripts/script.js"></script>

    <!-- {{!-- BOOTSTRAP --}} -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- font awesome v5 toolkit script -->
    <script src="https://kit.fontawesome.com/e00a1e7cf5.js"></script>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <style>
        body {
            background-color: #1E1E1E;
        }

        .main {
            height: 100vh;
            background-color: #FFFFFF;
        }
    </style>
</head>

<body>

    <div class="container main">

        <h3 style="text-align: center;">Host a Meeting</h3>

        <form action="/hostReg" method="POST" class="mt-5">

            <div class="form-group">
                <label for="InputName">Full Name</label>
                <input type="text" class="form-control" id="hostName" name="hostName" placeholder="Enter Full Name"
                    required="true">
            </div>

            <div class="form-group">
                <label for="InputContact">Contact Number</label>
                <input type="text" class="form-control" id="hostContact" name="hostContact"
                    placeholder="Enter Full Name" required="true">
            </div>

            <div class="form-group">
                <label for="InputContact">Address</label>
                <input type="text" class="form-control" id="hostAddress" name="hostAddress" placeholder="Enter Address"
                    required="true">
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="InputEmail">Email Addres</label>
                    <input name="hostEmail" id="hostEmail" type="email" class="form-control" placeholder="Email"
                        required="true">
                </div>
                <div class="form-group col-md-4">
                    <label for="InputKey">Key</label>
                    <input class="form-control" name="hostKey" id="hostKey" type="text" placeholder="Key" required="true">
                    <small id="keylHelp" class="ml-1 form-text text-muted">This key will be rquired to Deregister you of
                        the system.</small>
                </div>
            </div>

            <div class="p-2 d-flex justify-content-center">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="submit" class="btn btn-outline-success" value="Check In">Register Host</button>
                    <button type="submit" class="btn btn-outline-dark" formaction="/hostDereg"
                        value="Check Out">Deregister Host</button>
                </div>

            </div>


        </form>

    </div>

</body>

</html>